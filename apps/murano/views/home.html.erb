    <script src="js/bootstrap-datepicker.pt-BR.min.js"></script>
    <script>
$('.input-group.date').datepicker({
  format: "dd/mm/yyyy",
  startView: 0,
  minViewMode: 0,
  language: "pt-BR",
  orientation: "top left",
  autoclose: true,
  todayHighlight: true
