<h1>Spending</h1>

<form class="form-horizontal" method="post" action="spending/create">
  <div class="form-group">
    <label for="inputDate" class="col-sm-2 control-label">Date</label>
    <div class="col-sm-8 col-md-6">
      <div class="input-group date">
        <input name="date" type="text" class="form-control" placeholder="Date">
        <span class="input-group-addon">
          <i class="glyphicon glyphicon-th"></i>
        </span>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="inputCurrency" class="col-sm-2 control-label">Currency</label>
    <div class="col-sm-8 col-md-6">
      <select name="currency" class="form-control" id="inputCurrency">
        <option>BRL</option>
        <option>USD</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label for="inputValue" class="col-sm-2 control-label">Value</label>
    <div class="col-sm-8 col-md-6">
      <input name="value" type="text" class="form-control" id="inputValue" placeholder="Value">
    </div>
  </div>
  <div class="form-group">
    <label for="inputPayMethod" class="col-sm-2 control-label">Pay method</label>
    <div class="col-sm-8 col-md-6">
      <input name="pay_method" type="text" class="form-control" id="inputPayMethod" placeholder="Pay method">
    </div>
  </div>
  <div class="form-group">
    <label for="inputSeller" class="col-sm-2 control-label">Seller</label>
    <div class="col-sm-8 col-md-6">
      <input name="seller" type="text" class="form-control" id="inputSeller" placeholder="Seller">
    </div>
  </div>
  <div class="form-group">
    <label for="inputCategory" class="col-sm-2 control-label">Category</label>
    <div class="col-sm-8 col-md-6">
      <input name="category" type="text" class="form-control" id="inputCategory" placeholder="Category">
    </div>
  </div>
  <div class="form-group">
    <label for="inputTags" class="col-sm-2 control-label">Tags</label>
    <div class="col-sm-8 col-md-6">
      <input name="tags" type="text" class="form-control" id="inputTags" placeholder="Tags">
    </div>
  </div>
  <div class="form-group">
    <label for="inputDescription" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-8 col-md-6">
      <input name="description" type="text" class="form-control" id="inputDescription" placeholder="Description">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <button type="submit" class="btn btn-default">Create</button>
    </div>
  </div>
</form>
