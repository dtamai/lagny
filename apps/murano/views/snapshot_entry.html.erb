<h1>Snapshot entry</h1>

<form class="form-horizontal" method="post" action="snapshot/create">
  <div class="form-group">
    <label for="inputDate" class="col-sm-2 control-label">Date</label>
    <div class="col-sm-4">
      <div class="input-group date">
        <input name="date" type="text" class="form-control" placeholder="Date">
        <span class="input-group-addon">
          <i class="glyphicon glyphicon-th"></i>
        </span>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="inputBucket" class="col-sm-2 control-label">Bucket</label>
    <div class="col-sm-4">
      <input name="bucket" type="text" class="form-control" id="inputBucket" placeholder="Bucket">
    </div>
  </div>
  <div class="form-group">
    <label for="inputValue" class="col-sm-2 control-label">Value</label>
    <div class="col-sm-4">
      <input name="value" type="text" class="form-control" id="inputValue" placeholder="Value">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <button type="submit" class="btn btn-default">Create</button>
    </div>
  </div>
</form>
